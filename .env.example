# Heimdall Configuration
# Copy this file to .env and fill in your values
# cp .env.example .env

# ==============================================================================
# Salesforce Configuration (Required)
# ==============================================================================

# Your Salesforce instance URL (e.g., https://mycompany.my.salesforce.com)
SALESFORCE_BASE_URL=https://your-instance.my.salesforce.com

# Your Salesforce Organization ID (18-character ID starting with 00D)
# Note: This will be auto-detected from OAuth response in a future version
SALESFORCE_ORG_ID=00Dxxxxxxxxxxxxxxx

# Authentication method: "client_credentials" or "urn:ietf:params:oauth:grant-type:jwt-bearer"
SALESFORCE_GRANT_TYPE=client_credentials

# Connected App OAuth credentials (for client_credentials flow)
SALESFORCE_CLIENT_ID=your_connected_app_client_id
SALESFORCE_CLIENT_SECRET=your_connected_app_client_secret

# JWT authentication (alternative - uncomment if using JWT)
# SALESFORCE_USERNAME=your.user@company.com
# SALESFORCE_JWT_KEY_FILE=/path/to/your/private.key
# SALESFORCE_AUDIENCE_URL=https://login.salesforce.com

# Salesforce API version (default: v61.0)
# SALESFORCE_API_VERSION=v61.0

# ==============================================================================
# AWS S3 Configuration (Required)
# ==============================================================================

# S3 bucket name for storing backups
AWS_S3_BUCKET_NAME=your-backup-bucket-name

# AWS region (default: eu-north-1)
AWS_S3_REGION=eu-north-1

# Optional: Custom S3 endpoint for MinIO or other S3-compatible storage
# AWS_S3_ENDPOINT=https://minio.your-company.com

# Note: AWS credentials are loaded from environment or ~/.aws/credentials
# Set AWS_ACCESS_KEY_ID and AWS_SECRET_ACCESS_KEY if not using IAM roles

# ==============================================================================
# PostgreSQL Configuration (Required)
# ==============================================================================

# PostgreSQL connection URL
POSTGRES_URL=jdbc:postgresql://localhost:5432/heimdall

# Database credentials
POSTGRES_USERNAME=heimdall
POSTGRES_PASSWORD=your_secure_password

# ==============================================================================
# Optional Settings
# ==============================================================================

# Skip ContentVersion files smaller than N KB (0 = download all)
# HEIMDALL_SKIP_FILES_BELOW_KB=0
